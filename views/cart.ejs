<%- include('./partials/header') %>

<div class="w-full min-h-screen px-10 py-10">

    <% user.cart.forEach(function(item){ %>

    <div class="w-full border rounded-xl mb-6 p-5 flex gap-8 bg-white shadow">
        
        <!-- LEFT: Product Image -->
        <div class="w-40 h-40 flex items-center justify-center rounded-xl" style="background:<%= item.bgcolor %>">
            <img class="h-32" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" />
        </div>

        <!-- RIGHT: Product Details -->
        <div class="flex-grow">

            <!-- Product Name + Price -->
            <div class="flex justify-between items-start">
                <div>
                    <h2 class="text-xl font-semibold"><%= item.name %></h2>
                    <p class="text-gray-600 text-sm mt-1">Size: <%= item.size || 'Free Size' %></p>
                    <p class="text-gray-600 text-sm">Color: <%= item.color || 'Multicolor' %></p>
                </div>

                <div class="text-right">
                    <h3 class="text-2xl font-bold text-green-600">₹ <%= Number(item.price) - Number(item.discount) + 20 %></h3>
                    <p class="text-gray-500 text-sm line-through">₹ <%= item.price %></p>
                    <p class="text-red-500 text-sm">Discount: ₹<%= item.discount %></p>
                </div>
            </div>

            <!-- Quantity Controls -->
            <div class="flex items-center gap-4 mt-4">
                <button class="w-8 h-8 border rounded-full flex items-center justify-center">−</button>
                <div class="px-3 py-1 bg-gray-100 rounded-md">1</div>
                <button class="w-8 h-8 border rounded-full flex items-center justify-center">+</button>
            </div>

            <!-- Price Breakdown -->
            <div class="mt-5">
                <h3 class="text-lg font-semibold">Price Breakdown</h3>

                <div class="mt-3 space-y-2">
                    <div class="flex justify-between">
                        <p>Total MRP</p>
                        <p>₹ <%= item.price %></p>
                    </div>

                    <div class="flex justify-between">
                        <p>Discount</p>
                        <p>₹ <%= item.discount %></p>
                    </div>

                    <div class="flex justify-between">
                        <p>Platform Fee</p>
                        <p>₹ 20</p>
                    </div>

                    <div class="flex justify-between">
                        <p>Shipping Fee</p>
                        <p class="text-green-600">FREE</p>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <% }) %>

    <!-- FINAL BILL SECTION -->
<div class="w-full border rounded-xl p-6 bg-white shadow mt-10">

    <h2 class="text-2xl font-semibold mb-4">Order Summary</h2>

    <div class="space-y-3 text-lg">

        <div class="flex justify-between">
            <p>Total MRP</p>
            <p>₹ <%= breakdown.totalMRP %></p>
        </div>

        <div class="flex justify-between">
            <p>Discount on MRP</p>
            <p class="text-green-600">− ₹ <%= breakdown.totalDiscount %></p>
        </div>

        <div class="flex justify-between">
            <p>Platform Fee</p>
            <p>₹ <%= breakdown.platformFee %></p>
        </div>

        <div class="flex justify-between">
            <p>Shipping Fee</p>
            <p class="text-green-600">FREE</p>
        </div>

        <div class="w-full h-[1px] bg-gray-300 my-3"></div>

        <!-- GRAND TOTAL -->
        <div class="flex justify-between font-semibold text-xl">
            <p>Total Amount</p>
            <p class="text-green-700">₹ <%= breakdown.grandTotal %></p>
        </div>

    </div>

    <button class="mt-6 w-full py-3 rounded-lg bg-green-600 text-white font-semibold text-lg">
        Proceed to Buy
    </button>
</div>

</div>

<%- include('./partials/footer') %>